extends ./_layouts/weather
block weather_content
  #place-weather-title
    if (shareInfo)
      .our-sharedata.pull-right(data-appname='ournet', data-identifier=shareInfo.identifier, data-title=shareInfo.title, data-cid=shareInfo.clientId)
        each service in config.shareDataServices
          a.our-share-item(class=service, data-service=service, href=shareInfo.getShareUrl(service), rel='nofollow', target='_blank', title=util.format(__('share_on_format'),util.startWithUpperCase(service)))
            span.share-icon
              i
            span.share-count.hidden

    h1= title
  #place-weather-summary.group
    h2.sinfo= site.head.description
  if (report)
    .weather
      table.weather-table
        thead
          tr
            th
            th
            th= __('weather.item_conditions')
            th.no= __('weather.item_temperatire')
            th.no= __('weather.item_pressure')
            th= __('weather.item_wind_dir')
            th= __('weather.item_wind_speed')
        tbody
          each day, i in report.days
            tr
              th(colspan='7', class='head')
                div
                  h3= util.moment(new Date(day.date)).format('dddd, D MMMM')
            each item in day.times
              tr
                - var symbol_name = util.weather.symbolName(item.symbol, currentCulture.language)
                td.hour= util.moment(new Date(item.from)).format(config.hour_format)
                td.symbol
                  span.w-icon(class='wi'+item.symbol.number, title=symbol_name)
                td.symbol-name= symbol_name
                td.no.temperature= item.t.value
                  | &deg;
                td.no.pressure= item.pressure.value
                td.wind-dir
                  div(alt=item.wind.dir.code, title=item.wind.dir.code, class=util.weather.windDirectionCss(item.wind.dir.code))
                td.wind-speed= item.wind.speed.mps +' '+ __('weather.item_wind_speed_ms')

      #weather-source-footer
        a#yr-logo(href='http://www.yr.no/', rel='nofollow', target='_blank')
        = __('weather_cright')
      p.sinfo= subTitle


block right_content
  if (stories && stories.length>0)
    .tab
      .tab-title
        h4= __('latest_news')
      .tab-content
        .list.ot-news.view-icon-line
          each story, i in stories
            if (i < 4)
              .list-item.ot-news
                .item.ot-news.media
                  a.pull-left(href=story.url)
                    img.story-img.media-object(alt='', src=('http://wi.ournetcdn.net/image/q_'+story.imagedate+'_'+story.imageid+'.jpg'))
                  .media-body
                    a(href=story.url)= story.title
                    .details= util.moment.utc(story.date).fromNow(true)

