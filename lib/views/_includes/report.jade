if (report)
  .weather.content-box
    table.weather-table
      thead
        tr
          th
          th
          th= __('item_conditions')
          th.no= __('item_temperatire')
          th.no= __('item_pressure')
          th= __('item_wind_dir')
          th= __('item_wind_speed')
      tbody
        each day, i in report.days
          - var dayDate = new Date(day.times[day.times.length-1].from);
          if (dayDate >= currentDate)
            tr
              th(colspan='7', class='head')
                div
                  h4= util.moment(dayDate).locale(currentCulture.language).format('dddd, D MMMM')
            each item, j in day.times
              - var date = new Date(item.from)
              if (new Date(item.to) > currentDate)
                tr(class=(j==day.times.length-1?'last-hour':null))
                  - var symbol_name = util.weather.symbolName(item.symbol, currentCulture.language)
                  td.hour= util.moment(date).format(config.hour_format)
                  td.symbol
                    span.w-icon(class='wi'+item.symbol.number, title=symbol_name)
                  td.symbol-name= symbol_name
                  td.no.temperature= item.t.value
                    | &deg;
                  td.no.pressure= item.pressure.value
                  td.wind-dir
                    div(alt=item.wind.dir.code, title=item.wind.dir.code, class=util.weather.windDirectionCss(item.wind.dir.code))
                  td.wind-speed= item.wind.speed.mps +' '+ __('item_wind_speed_ms')
                if (!noGoogleAds)
                  if (i==1 && j==day.times.length-1)
                    tr
                      td(colspan=7)
                        .ads-block.text-center
                          if (site.platform === 'mobile')
                            // Mobile 320x100
                            ins.adsbygoogle(style='display:inline-block;width:320px;height:100px', data-ad-client='ca-pub-3959589883092051', data-ad-slot='1679401435')
                            script.
                              (adsbygoogle = window.adsbygoogle || []).push({});
                          else
                            // Ournet 468x60
                            ins.adsbygoogle(style='display:inline-block;width:468px;height:60px', data-ad-client='ca-pub-3959589883092051', data-ad-slot='3749376618')
                            script.
                              (adsbygoogle = window.adsbygoogle || []).push({});

    #weather-source-footer
      span#yr-logo
      = __('weather_cright')
    p.small.text-muted= subTitle
