extends ./_layouts/weather

block weather_content
  .page-title
    h1= title
  .content-box
    .list.ot-place
      each item in (places.Items || places)
        .list-item
          .item
            a(href=links.weather.place(item.id, {ul: currentCulture.language}))= util.Place.getName(item, currentCulture.language)
            if (item.region)
              div= util.Place.getName(item.region, currentCulture.language)
