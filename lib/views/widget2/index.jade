extends ../_layouts/form

block append styles
  link(type='text/css', rel='stylesheet', href='http://assets.ournetcdn.net/ournet/css/weather/widget-7cee1b7b.min.css')

block form_content
  input#widget-type(type="hidden", value="widget2")
  div
    if (shareInfo)
      .our-sharedata.pull-right(data-appname='ournet', data-identifier=shareInfo.identifier, data-title=shareInfo.title, data-cid=shareInfo.clientId)
        each service in config.shareDataServices
          a.our-share-item(class=service, data-service=service, href=shareInfo.getShareUrl(service), rel='nofollow', target='_blank', title=util.format(__('share_on_format'),util.startWithUpperCase(service)))
            span.share-icon
              i
            span.share-count.hidden
    h1= __('weather_on_your_site')
    p= site.head.description
    .row
      .col-sm-6.col-md-5.col-xs-14
        fieldset.form#widget-conf
          table.form-table
            tr
              td
                label(style='min-width: inherit', for='conf_place')= __('place')+ ':'
              td
                input#widget-conf-place(type='text', style='width: 140px; font-weight: bold; background: #f5f5f5;', name='place', value=place.getName(currentCulture.language))
                input#widget-conf-placeid.conf-input(name="id" type='hidden', value=place.id)
            tr
              td(colspan='2')
                table(style='border-spacing: 0px; padding: 0px; margin: 0px;')
                  tr
                    td
                      b= __('base_color') + ':'
                    td
                      b= __('item_color') + ':'
                    td
                      b= __('text_color') + ':'
                  tr
                    td
                      input.conf-input(type='text', name='color', value='68a7d4', maxlength='6', style='width: 60px')
                    td
                      input.conf-input(type='text', name='itemcolor', placeholder='auto', maxlength='6', style='width: 60px')
                    td
                      input.conf-input(type='text', name='textcolor', placeholder='auto', maxlength='6', style='width: 60px')
            tr
              td
                label(style='min-width: inherit', for='conf_pos')= __('position')+':'
              td
                select#conf_pos.conf-input(name='pos', style='width: 100px;')
                  option(value='h')= __('horizontal')
                  option(value='v', selected='selected')= __('vertical')
            tr
              td
                label(style='min-width: inherit', for='conf_days')= __('days')+':'
              td
                select#conf_days.conf-input(name='days', style='width: 50px;')
                  option(value='1') 1
                  option(value='2') 2
                  option(selected='selected', value='3') 3
                  option(value='4') 4
                  option(value='5') 5
            tr
              td
                label(style='min-width: inherit', for='conf_w')= __('width')+':'
              td
                input#conf_w.conf-input(type='number', style='width: 50px;', maxlength='3', min='100', max='800', name='w', value='250')
            tr
              td
                label(style='min-width: inherit', for='conf_header')= __('show_header')+':'
              td
                input#conf_header.conf-input(type='checkbox', name='header', checked='checked')
            tr
              td
              td
                button#widget-conf-generate.btn.btn-danger(type='button')= __('generate')
        br
        //- if (currentCulture.country == "ro")
        //-   iframe(width='300', height='169', src='//www.youtube.com/embed/sLYbJaLlY6M?rel=0', frameborder='0', allowfullscreen='')
        //- else if (currentCulture.country == "md")
        //-   iframe(width='300', height='225', src='//www.youtube.com/embed/cI1yc9TxWb8?rel=0', frameborder='0', allowfullscreen='')
      .col-sm-8.col-md-9.col-xs-14
        div#widget-preview
          h2= __('preview')
          br
          #widget-iframe
          br
          h2= __('html_code')
          div
            textarea#widget-script


block append scripts
  script(type='text/javascript', src='http://assets.ournetcdn.net/ournet/js/weather/page-widget-1df2b03e.min.js')


