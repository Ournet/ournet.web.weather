.weather-summary
  each item in placesForecast
    - var dayWindCode = item.weather.wind.dir.code.length>2?item.weather.wind.dir.code.substr(1):item.weather.wind.dir.code;
    - var symbol_name = util.weather.symbolName(item.weather.symbol, currentCulture.language)
    .wt-body
      .wt-col.wt-name
        a(href=links.weather.place(item.place.id, {ul: currentCulture.language}))= item.place.getName(currentCulture.language)
      .wt-col.wt-temp
        i.w-icon(class='wi-' + item.weather.symbol.number, title=symbol_name)
        span.temp= item.weather.t.value
          | &deg;
        span.name= symbol_name
      .wt-col.wt-wind
        span.wind-speed(class='beaufort-'+item.weather.wind.speed.beaufort)= item.weather.wind.speed.mps
        = ' ' + __('item_wind_speed_ms')
        span.wind-dir(title=dayWindCode, class='wind-dir-' + dayWindCode) &rarr;
