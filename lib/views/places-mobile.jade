extends ./_layouts/weather-mobile
block weather_content
  #place-weather-title
    h1= title
  br
  .list.ot-place
    each item in (places.Items || places)
      .list-item
        .item
          a(href=links.weather.place(item.id, {ul: currentCulture.language}))= item.getName(currentCulture.language)
          if (item.region)
            div= item.region.getName(currentCulture.language)
